{{ template "page" . }}

{{ define "page-name" }}Change Executive Case Manager{{ end }}

{{ define "main" }}
    {{ template "content-header" . }}
    {{ $RenamedErrors := (rename_errors .Errors) }}
    {{ template "error-summary" $RenamedErrors }}
    <div class="govuk-grid-row govuk-!-margin-top-5">
        <div class="govuk-grid-column-full">
            <header>
                <h1 class="govuk-heading-l  govuk-!-margin-bottom-1">
                    {{ block "page-name" . }}{{ end }}
                </h1>
            </header>
            <div class="govuk-grid-row">
                <form
                    id="change-ecm-form"
                    class="change-ecm govuk-grid-column-one-half"
                    method="post">
                    <input
                        type="hidden"
                        name="xsrfToken"
                        value="{{ .XSRFToken }}" />

                    <p class="govuk-body govuk-!-margin-bottom-5">
                        Current ECM:
                        {{ if not .DeputyDetails.ExecutiveCaseManager.IsDefault }}
                            {{ .DeputyDetails.ExecutiveCaseManager.EcmName }}
                        {{ end }}
                    </p>
                    <div class="govuk-form-group{{ if index $RenamedErrors "select-ecm" }} govuk-form-group--error{{ end }}">
                        <label class="govuk-label" for="f-select-ecm">
                            Enter an Executive Case Manager name
                        </label>
                        {{ template "error-message" (index $RenamedErrors "select-ecm") }}
                        <div
                            class="autocomplete-wrapper"
                            id="select-ecm-dropdown">
                            <select id="f-select-ecm" name="select-ecm">
                                <option value=""></option>
                                {{ range .EcmTeamDetails }}
                                    <!-- prettier-ignore -->
                                    <option value="{{ .ID }}" {{ if eq .CurrentEcm .ID }} selected="selected" {{ end }}>{{ .DisplayName }}</option>
                                {{ end }}
                            </select>
                        </div>
                    </div>
                    <div class="govuk-button-group govuk-!-margin-top-7">
                        <button
                            type="submit"
                            class="govuk-button"
                            data-module="govuk-button">
                            Save ECM
                        </button>

                        <a
                            class="govuk-link data-emc-cancel"
                            href="{{ prefix (printf "/%d" .DeputyDetails.ID) }}">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{ end }}
