{{ template "page" . }}

{{ define "page-name" }}Create new firm{{ end }}

{{ define "main" }}
    {{ template "content-header" . }}
    {{ $RenamedErrors := (rename_errors .Errors) }}
    {{ template "error-summary" $RenamedErrors }}
    <header>
        <h1 class="govuk-heading-l  govuk-!-margin-bottom-1">
            {{ block "page-name" . }}{{ end }}
        </h1>
    </header>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <form id="add-firm-form" class="" method="post">
                <input
                    type="hidden"
                    name="xsrfToken"
                    value="{{ .XSRFToken }}" />
                <div class="govuk-form-group{{ if index $RenamedErrors "firmName" }} govuk-form-group--error{{ end }}">
                    <label class="govuk-label" for="f-firmName">Firm name</label>
                    {{ template "error-message" (index $RenamedErrors "firmName") }}
                    <input
                        class="govuk-input{{ if index $RenamedErrors "firmName" }} govuk-input--error{{ end }}"
                        id="f-firmName"
                        name="name"
                        type="text"
                        value="" />
                </div>
                <fieldset class="govuk-fieldset">
                    <legend
                        class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        Address
                    </legend>
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="f-address-line-1">
                            Building and street
                            <span class="govuk-visually-hidden">
                                line 1 of 3
                            </span>
                        </label>
                        <input
                            class="govuk-input"
                            id="f-address-line-1"
                            name="address-line-1"
                            type="text"
                            autocomplete="address-line1"
                            value="" />
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="f-address-line-2">
                            <span class="govuk-visually-hidden">
                                Building and street line 2 of 3
                            </span>
                        </label>
                        <input
                            class="govuk-input"
                            id="f-address-line-2"
                            name="address-line-2"
                            type="text"
                            autocomplete="address-line2"
                            value="" />
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="f-address-line-3">
                            <span class="govuk-visually-hidden"
                                >Building and street line 3 of 3
                            </span>
                        </label>
                        <input
                            class="govuk-input"
                            id="f-address-line-3"
                            name="address-line-3"
                            type="text"
                            autocomplete="address-line3" />
                    </div>
                    <div class="govuk-form-group">
                        <label
                            class="govuk-label govuk-!-width-two-thirds"
                            for="f-town">
                            Town or city
                        </label>
                        <input
                            class="govuk-input"
                            id="f-town"
                            name="town"
                            type="text"
                            value="" />
                    </div>
                    <div class="govuk-form-group">
                        <label
                            class="govuk-label govuk-!-width-two-thirds"
                            for="f-county">
                            County
                        </label>
                        <input
                            class="govuk-input"
                            id="f-county"
                            name="county"
                            type="text"
                            value="" />
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="f-postcode">
                            Postcode
                        </label>
                        <input
                            class="govuk-input govuk-input--width-10"
                            id="f-postcode"
                            name="postcode"
                            type="text"
                            value="" />
                    </div>
                </fieldset>
                <div class="govuk-form-group">
                    <label class="govuk-label" for="f-telephone">
                        Telephone number
                    </label>
                    <input
                        class="govuk-input"
                        id="f-telephone"
                        name="telephone"
                        type="text"
                        value="" />
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label" for="f-email">
                        Email address
                    </label>
                    <input
                        class="govuk-input"
                        id="f-email"
                        name="email"
                        type="text"
                        value="" />
                </div>
                <div class="govuk-button-group govuk-!-margin-top-7">
                    <button
                        type="submit"
                        class="govuk-button"
                        data-module="govuk-button">
                        Save team details
                    </button>
                    <a
                        class="govuk-link"
                        href="{{ prefix (printf "/%d/change-firm" .DeputyId) }}">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
{{ end }}
